<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="10"

    android:background="@color/colorWhite"
    tools:context=".sidenav.SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:background="@drawable/normal_background">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="494dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/normal_background"
        android:orientation="vertical"
        android:elevation="20dp">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:src="@drawable/settingicon"
            android:visibility="visible" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/round_hape_btn"
            android:text="Change Password"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="45dp" />


        <Button
            android:id="@+id/personal_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/round_hape_btn"
            android:text="View Personal Information"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="45dp" />


        <Button
            android:id="@+id/language_preferance"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/round_hape_btn"
            android:text="Alert Language Preferences"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>

    </LinearLayout>


</FrameLayout>