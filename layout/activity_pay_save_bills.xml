<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/header_background"
    tools:context=".PaySaveBillsActivity">

    <LinearLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <include
            layout="@layout/custom_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </include>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/normal_background">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="850dp"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:weightSum="30">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/textPrimary"
                                android:text="Utility Nick Name">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:gravity="top"
                                android:textColor="@color/buttonPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/sp_utilityName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/textview_border"
                                android:dropDownVerticalOffset="0dp"
                                android:popupBackground="@color/colorWhite"
                                android:spinnerMode="dropdown"
                                android:drawSelectorOnTop="true"
                                android:entries="@array/utilityName"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_drop_down"
                                android:layout_marginLeft="-50dp">

                            </ImageView>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/textPrimary"
                                android:text="Debit Account">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:gravity="top"
                                android:textColor="@color/buttonPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <Spinner
                                android:id="@+id/sp_accountName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/textview_border"
                                android:dropDownVerticalOffset="0dp"
                                android:popupBackground="@color/colorWhite"
                                android:spinnerMode="dropdown"
                                android:drawSelectorOnTop="true"
                                android:entries="@array/accountName"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_drop_down"
                                android:layout_marginLeft="-50dp">

                            </ImageView>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/textPrimary"
                                android:text="Available Balance">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:gravity="top"
                                android:textColor="@color/buttonPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:padding="5dp">

                            <EditText
                                android:id="@+id/et_availableBalance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="10dp"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:hint="LKR  "
                                android:background="@drawable/textview_border" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/textPrimary"
                                android:text="Account Name">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:gravity="top"
                                android:textColor="@color/buttonPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:padding="5dp">

                            <EditText
                                android:id="@+id/et_accountName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="10dp"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:background="@drawable/textview_border" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/textPrimary"
                                android:text="Payment Date">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:gravity="top"
                                android:textColor="@color/buttonPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="3"
                                android:background="@drawable/textview_border"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_paymentDate"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.5"
                                    android:paddingStart="10dp"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical">
                                </TextView>
                                <ImageView
                                    android:id="@+id/btn_paymentDate"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_calendar">

                                </ImageView>

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/textPrimary"
                                android:text="Pay Preferred Amount">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:gravity="top"
                                android:textColor="@color/buttonPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:padding="5dp">

                            <EditText
                                android:id="@+id/et_prefferedAmt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="LKR  "
                                android:paddingStart="10dp"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:background="@drawable/textview_border" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/textPrimary"
                                android:text="Fee">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:gravity="top"
                                android:textColor="@color/buttonPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:padding="5dp">

                            <EditText
                                android:id="@+id/et_fee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="10dp"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:background="@drawable/textview_border" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/textPrimary"
                                android:text="Total Debit Amount">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:gravity="top"
                                android:textColor="@color/buttonPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:padding="5dp">

                            <EditText
                                android:id="@+id/et_totDebtAmt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="LKR  "
                                android:paddingStart="10dp"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:background="@drawable/textview_border" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical|center">

                                <CheckBox
                                    android:id="@+id/cb_accept"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/buttonPrimary"
                                    android:gravity="center_vertical|center">

                                </CheckBox>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:weightSum="3"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Yes, I read the "
                                        android:gravity="bottom"
                                        android:textColor="@color/colorBlack">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="@string/tearms_conditions"
                                        android:gravity="bottom"
                                        android:textColor="@color/textPrimary">

                                    </TextView>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text=" and"
                                        android:gravity="bottom"
                                        android:textColor="@color/colorBlack">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="I accept them."
                                        android:gravity="center"
                                        android:textColor="@color/colorBlack">

                                    </TextView>

                                </LinearLayout>





                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">

                            <Button
                                android:id="@+id/btn_saveBillsNext"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_style_red"
                                android:textColor="@color/colorWhite"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:text="Next"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textSize="15sp">

                            </Button>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </View>


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>